@model PDC.AO.Hospital.ViewModels.EspecialidadeViewModel
@{
    Layout = "_Admin";
    ViewData["Title"] = "Especialidades";
}
@section Styles {
    <link href="~/css/especialidade.css" rel="stylesheet" />
}

<!-- Botão para abrir modal -->
<button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#modalAdicionar">
    <i class="bi bi-plus-circle me-2"></i>Adicionar Especialidade
</button>

<!-- Tabela de Especialidades -->
<div class="content-wrapper">
    <div class="data-table-card">
        <div class="table-header">
            <h4>Lista de Especialidades</h4>
            <button class="btn-primary-custom" data-bs-toggle="modal" data-bs-target="#modalAdicionar">
                <i class="bi bi-plus-circle"></i>
                Adicionar Especialidade
            </button>
        </div>
        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Descrição</th>
                        <th>Data de Cadastro</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model?.Especialidades != null && Model.Especialidades.Any())
                    {
                        @foreach (var especialidade in Model.Especialidades)
                        {
                            <tr>
                                <td>#@especialidade.Id.ToString("D3")</td>
                                <td>@especialidade.Descricao</td>
                                <td>@DateTime.Now.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="action-buttons">
                                        <button class="btn-action btn-edit"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modalEditar"
                                                onclick="editarEspecialidade('@especialidade.Descricao')">
                                            <i class="bi bi-pencil-fill"></i>
                                        </button>
                                        <!-- APENAS MUDANÇA: remover aspas do ID -->
                                        <button class="btn-action btn-delete"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modalEliminar"
                                                onclick="eliminarEspecialidade(@especialidade.Id, '@especialidade.Descricao')">
                                            <i class="bi bi-trash-fill"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center" style="padding: 3rem;">
                                <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                                <p style="margin-top: 1rem; color: #666;">Nenhuma especialidade cadastrada.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<partial name="~/Views/Shared/Modals/_ModalsAdicionarEspecialidade.cshtml" model="Model" />
<partial name="~/Views/Shared/Modals/_ModalsEditarEspecialidade.cshtml" />
<partial name="~/Views/Shared/Modals/_ModalsEliminarEspecialidade.cshtml" model="Model" />
<partial name="~/Views/Shared/Modals/_ModalsError.cshtml" />
<partial name="~/Views/Shared/Modals/_ModalsSucesso.cshtml" />








@section Scripts {
    <script src="~/js/especialidade-modal.js"></script>
}

