<!-- Modal Adicionar -->
<div class="modal fade" id="modalAdicionar" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-plus-circle me-2"></i>Adicionar Especialidade
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="descricaoAdicionar" class="form-label">Descrição da Especialidade</label>
                        <input type="text" class="form-control" id="descricaoAdicionar" placeholder="Ex: Cardiologia, Pediatria..." required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn-success">
                    <i class="bi bi-check-circle me-2"></i>Salvar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Editar -->
<div class="modal fade" id="modalEditar" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-pencil-square me-2"></i>Editar Especialidade
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="descricaoEditar" class="form-label">Descrição da Especialidade</label>
                        <input type="text" class="form-control" id="descricaoEditar" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn-success">
                    <i class="bi bi-check-circle me-2"></i>Atualizar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Eliminar -->
<div class="modal fade modal-delete" id="modalEliminar" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle me-2"></i>Confirmar Eliminação
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="delete-warning">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    <h5>Tem certeza que deseja eliminar?</h5>
                    <p>A especialidade <span class="specialty-name" id="especialidadeNome"></span> será removida permanentemente.</p>
                    <p style="margin-top: 10px; color: #e53935; font-weight: 500;">Esta ação não pode ser desfeita!</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn-danger">
                    <i class="bi bi-trash-fill me-2"></i>Sim, Eliminar
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function editarEspecialidade(nome) {
            document.getElementById('descricaoEditar').value = nome;
        }

        function eliminarEspecialidade(nome) {
            document.getElementById('especialidadeNome').textContent = nome;
        }
    </script>
}
