@model PDC.AO.Hospital.ViewModels.EspecialidadeViewModel

<div class="modal fade modal-delete" id="modalEliminar" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle me-2"></i>Confirmar Eliminação
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-controller="Especialidade" asp-action="EliminarEspecialidade" method="post">
                <div class="modal-body">
                    <div class="delete-warning">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <h5>Tem certeza que deseja eliminar?</h5>
                        <p>A especialidade <span class="specialty-name fw-bold" id="especialidadeNome-eliminar"></span> será removida permanentemente.</p>
                        <p style="margin-top: 10px; color: #e53935; font-weight: 500;">Esta ação não pode ser desfeita!</p>
                    </div>
                    <!-- IMPORTANTE: name="id" minúsculo -->
                    <input type="hidden" id="especialidadeId-eliminar" name="id" value="" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash-fill me-2"></i>Sim, Eliminar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

